<div id="restaurant">
  <div id="title" class="title">
    <h1 class="restaurantName"><%= @restaurant.name %></h1><br>
  </div>

  <div id="restaurant-info">
    <h4 class="restaurantCuisine">Cuisine: <%= @restaurant.cuisine.name %></h4>
    <h4 class="restaurantAddress">Address: <%= @restaurant.address %></h4>
    <h4 class="restaurantNeighborhood">Neighborhood: <%= @restaurant.neighborhood.name %></h4>
    <br><br>
    <h4 class="restaurantRating">Average Rating: <%= @restaurant.average_rating %><br></h4>
    <h4 class="restaurantReviews">Total Reviews: <%= @restaurant.reviews.count %><br></h4>
    <br><br>
  </div>

  <div class="buttons">
    <% if !Review.exists?(user_id: current_user.id, restaurant_id: @restaurant.id) %>
      <%= link_to "Write a Review", new_user_review_path(:user_id => current_user.id, :restaurant_id => @restaurant.id), class: "btn btn-outline-info" %><br><br>
    <% end %>
    <br><br><br><br><br>
  </div>

  <div id="restaurant-reviews">
    <% @restaurant.reviews.each do |review| %>
      <strong><h3><p class="reviewUser lead"><%= review.user.name %></p></h3></strong>
      <p class="reviewRating lead">Rating: <%= review.rating %>/5</p>
      <p class="reviewComment lead"><%= review.comment %></p>
      <br><br><br><br><br>
    <% end %>
  </div>
</div>
<div class="buttons">
  <button class="js-previous btn btn-outline-primary" data-id="<%=@restaurant.id%>">Previous</button><button class="js-next btn btn-outline-primary" data-id="<%=@restaurant.id%>">Next</button>
  <br><br><br><br><br>
</div>
