<div id="title" class="title">
  <h1><%= @restaurant.name %></h1><br>
</div>

<div id="restaurant-info">
  <h4>Cuisine: <%= @restaurant.cuisine.name %></h4>
  <h4>Address: <%= @restaurant.address %></h4>
  <h4>Neighborhood: <%= @restaurant.neighborhood.name %></h4>
  <br><br>
  <h4>Average Rating: <%= @restaurant.average_rating %><br></h4>
  <h4>Total Reviews: <%= @restaurant.reviews.count %><br></h4>
  <br><br>
</div>

<div class="buttons">
  <% if !Review.exists?(user_id: current_user.id, restaurant_id: @restaurant.id) %>
    <%= link_to "Write a Review", new_user_review_path(:user_id => current_user.id, :restaurant_id => @restaurant.id), class: "btn btn-outline-info" %><br><br>
  <% end %>
  <br><br><br><br><br>
</div>

<div id="restaurant-reviews">
  <% @restaurant.reviews.each do |review| %>
    <strong><h3><p class="lead"><%= review.user.name %></p></h3></strong>
    <p class="lead">Rating: <%= review.rating %>/5</p>
    <p class="lead"><%= review.comment %></p>
    <br><br><br><br><br>
  <% end %>
</div>

<div class="buttons">
  <button class="js-previous btn btn-outline-primary">Previous</button><button class="js-next btn btn-outline-primary">Next</button>
  <br><br><br><br><br>
</div>
